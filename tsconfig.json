{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "lib": [
      "es2016",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*",
    "dist/index.d.ts" // declaration file path
  ]
}